# Steam Game Server Login Token (GSLT)
# Create one here: https://steamcommunity.com/dev/managegameservers (App ID: 730)
CS2_GSLT_TOKEN=your_gslt_token_here

# Steam Web API Key
# Get it here: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here

# Server Configuration
CS2_SERVERNAME="My CS2 Server"
CS2_PASSWORD=secret_password
RCON_PASSWORD=rcon_secret_password

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Telegram User ID allowed to control the bot (get it from @userinfobot)
# You can specify multiple IDs separated by commas: 123456789,987654321
ALLOWED_USER_ID=123456789,987654321

# Playit.gg Configuration
# Secret key for the agent (get it after claiming the agent)
PLAYIT_SECRET=your_playit_secret_key

# Public Connection Info (Display only)
# OPTIONAL: Leave empty for automatic IP detection
# The bot will automatically detect your VPS external IP if these are not set
# Only set these if you want to use a specific IP or domain:
# - For direct connection: CS2_IP=123.123.123.123:27015
# - For Playit.gg tunnel: CS2_IP=69.9.185.19:25603
# - For custom domain: CS2_DOMAIN=cs2.example.com:27015
CS2_IP=
CS2_DOMAIN=

# Optional: Cloudflare Tunnel Token (if using cloudflared service)
# CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token

# https://playit.gg/
PLAYIT_SECRET=